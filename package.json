{
  "name": "yoga-clases-app",
  "version": "1.0.0",
  "description": "Software para gestión de clases de yoga terapéutico.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "ts-node-dev --respawn src/index.ts",
    "dev:frontend": "vite",
    "build:backend": "tsc",
    "build:frontend": "vite build",
    "start": "node dist/index.js",
    "sonar-scan": "sonar-scanner",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@sonar/scan": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1"
  }
}
